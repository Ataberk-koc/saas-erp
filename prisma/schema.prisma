generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. TENANT (Firma)
model Tenant {
  id        String   @id @default(uuid())
  name      String
  taxOffice String?
  taxNumber String?
  address   String?
  plan      Plan     @default(FREE)

  phone     String?
  email     String?
  website   String?
  iban      String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users         User[]
  customers     Customer[]
  products      Product[]
  invoices      Invoice[]
  expenses      Expense[]
  aiAnalyses    AiAnalysis[]
  // ðŸ‘‡ DÃœZELTME 1: Ä°liÅŸki karÅŸÄ±tlÄ±ÄŸÄ± buraya eklendi
  inventoryLogs InventoryLog[] 
}

// 2. KULLANICILAR
model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String?
  role     Role      @default(ADMIN)
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])
}

enum Plan {
  FREE
  PRO
  ENTERPRISE
}

// 3. CARÄ° HESAPLAR
model Customer {
  id        String   @id @default(uuid())
  name      String
  email     String?
  phone     String?
  type      String   // "BUYER", "SUPPLIER"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  address   String?
  tenantId  String
  tenant    Tenant @relation(fields: [tenantId], references: [id])

  invoices  Invoice[]
}

// 4. ÃœRÃœNLER
model Product {
  id        String   @id @default(uuid())
  name      String
  price     Decimal
  stock     Int      @default(0)
  vatRate   Int      @default(20)

  tenantId  String
  tenant    Tenant @relation(fields: [tenantId], references: [id])
  
  invoiceItems InvoiceItem[]
  // ðŸ‘‡ DÃœZELTME 2: ÃœrÃ¼n loglarÄ± iliÅŸkisi eklendi
  logs         InventoryLog[] 
}

// 5. FATURALAR
model Invoice {
  id        String   @id @default(uuid())
  number    Int
  date      DateTime @default(now())
  dueDate   DateTime?
  vatRate   Int     @default(20)
  status    InvoiceStatus @default(PENDING)

  tenantId  String
  tenant    Tenant @relation(fields: [tenantId], references: [id])

  customerId String
  customer   Customer @relation(fields: [customerId], references: [id])

  items      InvoiceItem[]
}

// 6. FATURA KALEMLERÄ°
model InvoiceItem {
  id        String  @id @default(uuid())
  quantity  Int
  price     Decimal
  vatRate   Int     @default(20) 

  invoiceId String
  invoice   Invoice @relation(fields: [invoiceId], references: [id])

  productId String
  product   Product @relation(fields: [productId], references: [id])
}

// 7. AI ANALÄ°Z RAPORLARI
model AiAnalysis {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  type      String   // "WEEKLY_SUMMARY", "RISK_ALERT"
  content   String   // AI Ã§Ä±ktÄ±sÄ±
  suggestions Json?
  tenantId  String
  tenant    Tenant @relation(fields: [tenantId], references: [id])
}

enum InvoiceStatus {
  PENDING   // Bekliyor
  PAID      // Ã–dendi
  CANCELLED // Ä°ptal
  OVERDUE   // GecikmiÅŸ
}

model Expense {
  id          String   @id @default(uuid())
  description String
  amount      Decimal
  date        DateTime @default(now())
  category    ExpenseCategory @default(OTHER)
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

enum Role {
  ADMIN
  ACCOUNTANT
  USER
}

enum ExpenseCategory {
  RENT
  FOOD
  TRANSPORT
  MARKETING
  OTHER
}

// ðŸ‘‡ YENÄ° TABLO: STOK GEÃ‡MÄ°ÅžÄ°
model InventoryLog {
  id        String   @id @default(uuid())
  
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  change    Int      // DeÄŸiÅŸim miktarÄ± (-5 veya +10)
  newStock  Int      // Ä°ÅŸlem sonrasÄ± stok
  type      LogType  // Ä°ÅŸlem TÃ¼rÃ¼
  note      String?  // AÃ§Ä±klama
  
  createdAt DateTime @default(now())
  
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
}

enum LogType {
  SALE       // SatÄ±ÅŸ
  PURCHASE   // AlÄ±m
  ADJUSTMENT // Elle DÃ¼zeltme
  CANCEL     // Ä°ptal/Ä°ade
}